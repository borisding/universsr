{
  "presets": ["env", "react", "stage-2"],
  "env": {
    "test": {
      "plugins": [
        "dynamic-import-node",
        ["babel-plugin-webpack-alias", { "config": "./build/index.js" }],
        [
          "react-css-modules",
          {
            "context": "./src",
            "exclude": "node_modules",
            "generateScopedName": "[local]",
            "filetypes": {
              ".scss": {
                "syntax": "postcss-scss",
                "plugins": ["postcss-nested"]
              }
            }
          }
        ]
      ]
    }
  }
}
