{
  "presets": ["env", "react", "stage-2"],
  "plugins": [
    "universal-import",
    [
      "react-css-modules",
      {
        "context": "./src",
        "generateScopedName": "[local]___[hash:base64:5]",
        "filetypes": {
          ".scss": {
            "syntax": "postcss-scss",
            "plugins": ["postcss-nested"]
          }
        }
      }
    ]
  ]
}
