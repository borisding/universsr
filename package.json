{
  "name": "universsr",
  "version": "6.0.0",
  "description": "Universal React + Redux project starter kit.",
  "main": "app.js",
  "scripts": {
    "clean": "rimraf public app/build",
    "webpack": "webpack --hide-modules",
    "build": "cross-env NODE_ENV=production npm-run-all clean webpack",
    "build:analyze": "cross-env ANALYZE_MODE=enabled npm run build",
    "dev": "run-p dev:api dev:app",
    "dev:app": "cross-env NODE_ENV=development node app.js",
    "dev:api": "cross-env NODE_ENV=development nodemon api",
    "start": "run-p start:api start:app",
    "start:app": "cross-env NODE_ENV=production node app.js",
    "start:api": "cross-env NODE_ENV=production node api",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:coverage": "rimraf assets/coverage && npm test -- --coverage",
    "test:update": "npm test -- --updateSnapshot",
    "test:watch": "npm test -- --watch",
    "lint": "npm-run-all lint:js lint:style",
    "lint:style": "stylelint **/*.scss --syntax=scss --fix",
    "lint:js": "eslint . --fix",
    "heroku-postbuild": "npm run build"
  },
  "verbose": true,
  "engines": {
    "npm": ">=6.4.1",
    "node": ">=10.13.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/borisding/universsr.git"
  },
  "keywords": [
    "universsr",
    "universal",
    "ssr",
    "express",
    "react",
    "redux",
    "react-redux"
  ],
  "author": "Boris Ding Poh Hing",
  "license": "MIT",
  "sideEffects": [
    "*.css",
    "*.scss",
    "*.sass"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@hot-loader/react-dom": "^16.13.0",
    "app-root-path": "^3.0.0",
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "connected-react-router": "^6.8.0",
    "cookie-parser": "^1.4.5",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "detect-node": "^2.0.4",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "history": "^4.10.1",
    "hpp": "^0.2.3",
    "html-minifier": "^4.0.0",
    "http-proxy-middleware": "^1.0.4",
    "husky": "^4.2.5",
    "is-plain-object": "^3.0.0",
    "make-promises-safe": "^5.1.0",
    "morgan": "^1.10.0",
    "open": "^7.0.4",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-frontload": "^1.1.0",
    "react-helmet": "^6.0.0",
    "react-hot-loader": "^4.12.21",
    "react-redux": "^7.2.0",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.2.0",
    "react-universal-component": "^4.0.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "rimraf": "^3.0.2",
    "serialize-javascript": "^3.1.0",
    "slash": "^3.0.0",
    "webpack-flush-chunks": "^2.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-strict-mode": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "autoprefixer": "^9.8.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "babel-plugin-universal-import": "^4.0.2",
    "copy-webpack-plugin": "^6.0.1",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "file-loader": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "nock": "^12.0.3",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "offline-plugin": "^5.0.7",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1",
    "redux-mock-store": "^1.5.4",
    "sass-loader": "^8.0.2",
    "stats-webpack-plugin": "^0.7.0",
    "stylelint": "^13.5.0",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-scss": "^3.17.2",
    "terser-webpack-plugin": "^3.0.2",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-hot-server-middleware": "^0.6.1",
    "webpackbar": "^4.0.0"
  },
  "nodemonConfig": {
    "debug": true,
    "ext": "js",
    "env": {
      "NODE_ENV": "development"
    },
    "watch": [
      "api/*",
      "middleware/*"
    ]
  },
  "localScopedName": "[local]___[hash:base64:5]",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not IE 10"
  ],
  "eslintIgnore": [
    "public/**/*.js",
    "app/build"
  ]
}
