{
  "name": "universsr",
  "version": "6.0.0",
  "description": "Universal React + Redux project starter kit.",
  "main": "app.js",
  "scripts": {
    "clean": "rimraf public app/serverRenderer.*",
    "webpack": "webpack --hide-modules",
    "build": "cross-env NODE_ENV=production npm-run-all clean webpack",
    "build:analyze": "cross-env ANALYZE_MODE=enabled npm run build",
    "dev:app": "cross-env NODE_ENV=development node app.js",
    "dev:api": "nodemon --exec node api.js",
    "dev": "run-p dev:api dev:app",
    "start:app": "cross-env NODE_ENV=production node app.js",
    "start:api": "cross-env NODE_ENV=production node api.js",
    "start": "run-p start:api start:app",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:coverage": "rimraf storage/coverage && npm test -- --coverage",
    "test:watch": "npm test -- --watch",
    "lint": "npm-run-all lint:js lint:style",
    "lint:style": "stylelint **/*.scss --syntax=scss --fix",
    "lint:js": "eslint . --fix",
    "heroku-postbuild": "npm run build"
  },
  "sideEffects": [
    "*.css",
    "*.scss",
    "*.sass"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "verbose": true,
  "engines": {
    "npm": ">=6.4.1",
    "node": ">=8.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/borisding/universsr.git"
  },
  "keywords": [
    "universsr",
    "universal",
    "ssr",
    "express",
    "react",
    "redux",
    "react-redux"
  ],
  "author": "Boris Ding Poh Hing",
  "license": "MIT",
  "dependencies": {
    "acorn": "^6.2.1",
    "app-root-path": "^2.2.1",
    "axios": "^0.19.0",
    "babel-plugin-react-css-modules": "^5.2.6",
    "classnames": "^2.2.6",
    "colors": "^1.3.3",
    "compression": "^1.7.4",
    "connected-react-router": "^6.5.2",
    "cookie-parser": "^1.4.4",
    "core-js": "^3.1.4",
    "cors": "^2.8.5",
    "detect-node": "^2.0.4",
    "dotenv": "^8.0.0",
    "dotenv-expand": "^5.1.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "helmet": "^3.20.0",
    "history": "^4.9.0",
    "hpp": "^0.2.2",
    "html-minifier": "^4.0.0",
    "http-proxy": "^1.17.0",
    "husky": "^3.0.1",
    "is-plain-object": "^3.0.0",
    "make-promises-safe": "^5.0.0",
    "module-alias": "^2.2.0",
    "morgan": "^1.9.1",
    "nock": "^10.0.6",
    "open": "^6.4.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-frontload": "^1.1.0",
    "react-helmet": "^5.2.1",
    "react-hot-loader": "^4.12.9",
    "react-redux": "^7.1.0",
    "react-router-config": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-s-alert": "^1.4.1",
    "react-universal-component": "^4.0.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "rimraf": "^2.6.3",
    "serialize-javascript": "^1.7.0",
    "slash": "^3.0.0",
    "uuid": "^3.3.2",
    "webpack-flush-chunks": "^2.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-strict-mode": "^7.2.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "babel-plugin-universal-import": "^4.0.0",
    "babel-plugin-webpack-alias": "^2.1.2",
    "copy-webpack-plugin": "^5.0.4",
    "cross-env": "^5.2.0",
    "css-loader": "^3.1.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jest": "^22.14.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "file-loader": "^4.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "offline-plugin": "^5.0.7",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.2",
    "postcss-scss": "^2.0.0",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.8.6",
    "redux-mock-store": "^1.5.3",
    "sass-loader": "^7.1.0",
    "stats-webpack-plugin": "^0.7.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-sass-guidelines": "^6.0.0",
    "stylelint-scss": "^3.9.2",
    "terser-webpack-plugin": "^1.3.0",
    "url-loader": "^2.1.0",
    "webpack": "^4.38.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.6",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-hot-server-middleware": "^0.6.0"
  },
  "nodemonConfig": {
    "debug": true,
    "ext": "js",
    "env": {
      "NODE_ENV": "development"
    },
    "watch": [
      "api/*",
      "middleware/*"
    ]
  },
  "localScopedName": "[local]___[hash:base64:5]",
  "browserslist": [
    "last 2 versions",
    "ie 11"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "grid": true,
        "flexbox": "no-2009"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "global-require": 0,
      "linebreak-style": 0,
      "no-global-assign": 0,
      "no-console": 0,
      "no-unused-vars": [
        2,
        {
          "varsIgnorePattern": "styles"
        }
      ],
      "react/prop-types": 0,
      "react/display-name": 0,
      "react/jsx-no-target-blank": 1,
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "storage/**/*",
    "public/**/*.js",
    "app/serverRenderer.*"
  ],
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "selector-max-id": 1,
      "selector-class-pattern": null,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ]
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest/setupTest.js"
    ],
    "coverageDirectory": "<rootDir>/storage/coverage",
    "collectCoverageFrom": [
      "{api,app}/**/**/*.{js,jsx}",
      "{utils,middleware}/*.js",
      "!{api,app}/**/**/index.{js,jsx}",
      "!{utils,middleware}/index.js",
      "!app/serverRenderer.{js,map}"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/config/jest/styleMock.js"
    },
    "testEnvironment": "node",
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.jsx?$",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "_moduleAliases": {
    "@root": ".",
    "@api": "api",
    "@app": "app",
    "@config": "config",
    "@logger": "logger",
    "@middleware": "middleware",
    "@public": "public",
    "@storage": "storage",
    "@utils": "utils"
  }
}
