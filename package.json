{
  "name": "universsr",
  "version": "1.0.0",
  "description": "Universal React + Redux, Express application boilerplate.",
  "main": "app.js",
  "scripts": {
    "clean": "rimraf public src/**/*-built.js",
    "build:prod": "cross-env NODE_ENV=production webpack --config build/index.js -p --progress --hide-modules",
    "start:prod": "npm-run-all clean build:prod && cross-env NODE_ENV=production node app.js",
    "start": "npm run clean && cross-env NODE_ENV=development nodemon --exec node app.js",
    "lint:all": "npm-run-all lint:js lint:style",
    "lint:js": "eslint build config src",
    "lint:style": "stylelint 'src/**/*.scss' && exit 0",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=7.6",
    "npm": ">=4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/borisding/universsr.git"
  },
  "keywords": [
    "universsr",
    "universal",
    "ssr",
    "express",
    "react",
    "redux",
    "react-redux"
  ],
  "author": "Boris Ding Poh Hing",
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^2.0.1",
    "axios": "^0.17.0",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "convict": "^4.0.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "ejs": "^2.5.7",
    "express": "^4.16.1",
    "extend": "^3.0.1",
    "helmet": "^3.9.0",
    "hpp": "^0.2.2",
    "isdev": "^1.0.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "react-universal-component": "^2.5.5",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-ready-wrapper": "^1.1.14",
    "rimraf": "^2.6.2",
    "serialize-javascript": "^1.4.0",
    "serve-favicon": "^2.4.5",
    "webpack-flush-chunks": "^1.2.1"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^7.1.5",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-universal-import": "^1.3.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "copy-webpack-plugin": "^4.1.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "errorhandler": "^1.5.0",
    "eslint": "^4.8.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-prettier": "^2.3.1",
    "extract-css-chunks-webpack-plugin": "^2.0.17",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "morgan": "^1.9.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "postcss-loader": "^2.0.6",
    "prettier": "^1.7.4",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^3.1.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "stylelint": "^8.2.0",
    "stylelint-config-sass-guidelines": "^3.1.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.20.0",
    "webpack-hot-server-middleware": "^0.2.0"
  },
  "nodemonConfig": {
    "debug": true,
    "verbose": false,
    "ext": "js jsx",
    "env": {
      "NODE_ENV": "development"
    },
    "ignore": [
      "client/*",
      "redux/*",
      "server/index.js",
      "public/dist/*",
      "index.*.js"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "cssModules": {
    "scopedName": "[local]___[hash:base64:5]"
  }
}
