{
  "name": "universsr",
  "version": "1.0.0",
  "description": "Universal React + Redux, Express application boilerplate.",
  "main": "app.js",
  "scripts": {
    "clean": "rimraf public src/**/*-built.*",
    "build:prod": "cross-env NODE_ENV=production webpack --config build/index.js -p --progress --hide-modules",
    "start": "npm-run-all clean build:prod && cross-env NODE_ENV=production node app.js",
    "start:dev": "npm run clean && nodemon --exec node app.js",
    "lint": "npm-run-all lint:js lint:style",
    "lint:style": "stylelint **/*.scss --syntax=scss --fix",
    "lint:js": "eslint . --fix",
    "precommit": "lint-staged",
    "test": "npm run lint:js && jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "rimraf coverage && npm test -- --coverage"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint:js",
      "git add"
    ],
    "*.scss": [
      "npm run lint:style",
      "git add"
    ]
  },
  "verbose": true,
  "engines": {
    "node": ">=7.6",
    "npm": ">=4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/borisding/universsr.git"
  },
  "keywords": [
    "universsr",
    "universal",
    "ssr",
    "express",
    "react",
    "redux",
    "react-redux"
  ],
  "author": "Boris Ding Poh Hing",
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^2.0.1",
    "axios": "^0.17.0",
    "babel-plugin-react-css-modules": "^3.3.2",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.2",
    "chalk": "^2.3.0",
    "classnames": "^2.2.5",
    "compression": "^1.7.1",
    "convict": "^4.0.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "ejs": "^2.5.7",
    "express": "^4.16.1",
    "extend": "^3.0.1",
    "helmet": "^3.9.0",
    "hpp": "^0.2.2",
    "husky": "^0.14.3",
    "isdev": "^1.0.1",
    "lint-staged": "^4.3.0",
    "prop-types": "^15.6.0",
    "react": "^16.1.0",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.1.0",
    "react-redux": "^5.0.6",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "react-universal-component": "^2.5.5",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-ready-wrapper": "^1.1.14",
    "rimraf": "^2.6.2",
    "serialize-javascript": "^1.4.0",
    "serve-favicon": "^2.4.5",
    "webpack-flush-chunks": "^1.2.1"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^7.1.5",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-universal-import": "^1.3.0",
    "babel-plugin-webpack-alias": "^2.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "copy-webpack-plugin": "^4.1.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.1",
    "errorhandler": "^1.5.0",
    "eslint": "^4.8.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-prettier": "^2.3.1",
    "extract-css-chunks-webpack-plugin": "^2.0.17",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "morgan": "^1.9.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "offline-plugin": "^4.8.4",
    "postcss-loader": "^2.0.6",
    "postcss-nested": "^2.1.2",
    "postcss-scss": "^1.0.2",
    "prettier": "^1.7.4",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^3.1.1",
    "react-test-renderer": "^16.1.0",
    "redux-mock-store": "^1.3.0",
    "sass-loader": "^6.0.6",
    "stats-webpack-plugin": "^0.6.1",
    "style-loader": "^0.19.0",
    "stylelint": "^8.2.0",
    "stylelint-config-sass-guidelines": "^3.1.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.20.0",
    "webpack-hot-server-middleware": "^0.2.0"
  },
  "nodemonConfig": {
    "debug": true,
    "verbose": false,
    "ext": "js jsx",
    "env": {
      "NODE_ENV": "development"
    },
    "ignore": [
      "coverage/**/*",
      "client/*",
      "redux/*",
      "server/index.js",
      "public/dist/*",
      "index.*.js"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/fixtures/mocks/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "testEnvironment": "node",
    "testRegex": ".*.spec\\.js$",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  }
}
